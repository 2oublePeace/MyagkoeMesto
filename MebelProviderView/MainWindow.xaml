<Window x:Class="MebelProviderView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MebelProviderView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Справочники">
                <MenuItem Header="Материалы" Click="btnMaterials_Click"></MenuItem>
                <MenuItem Header="Модули" Click="btnModules_Click"></MenuItem>
                <MenuItem Header="Поставки" Click="btnSupplys_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Отчеты">
                <MenuItem Header="Отгрузки по материалам" Click="btnReportShipmentList_Click"></MenuItem>
                <MenuItem Header="Поставки" Click="btnReportSupplys_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Image Grid.Row="1" Grid.Column="0" Grid.RowSpan="8" Source="Resources\logo.png" Width="350"/>
    </Grid>
</Window>